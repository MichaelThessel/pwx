<!doctype html>
<html lang="{{ app['locale'] }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ 'app.meta.description'|trans }}">
    <meta name="keywords" content="{{ 'app.meta.keywords'|trans }}">
    <title>PWX - {% block title %}No Title{% endblock %}</title>
    {% block head %}{% endblock %}

    <link href="{{ app['baseUrl'] }}/css/bootstrap.{{ app['theme'] }}.min.css" rel="stylesheet">
    <link href="{{ app['baseUrl'] }}/css/style.min.css" rel="stylesheet">

    {% include 'jslocale.twig' %}
    <script src="{{ app['baseUrl'] }}/js/scripts.min.js"></script>
  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="" id="navbar">
          <ul class="nav navbar-nav navbar-right">
            <li id="language-selector" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-globe" title="{{ 'app.language'|trans }}" ></span>
              </a>
              <ul class="dropdown-menu">
                <li {% if app['locale'] == 'nl' %}class="active"{% endif %}><a href="#" data-locale="nl">{{ 'app.language.dutch'|trans }}</a></li>
				<li {% if app['locale'] == 'en' %}class="active"{% endif %}><a href="#" data-locale="en">{{ 'app.language.english'|trans }}</a></li>
                <li {% if app['locale'] == 'eo' %}class="active"{% endif %}><a href="#" data-locale="eo">{{ 'app.language.esperanto'|trans }}</a></li>
                <li {% if app['locale'] == 'es' %}class="active"{% endif %}><a href="#" data-locale="es">{{ 'app.language.spanish'|trans }}</a></li>
                <li {% if app['locale'] == 'de' %}class="active"{% endif %}><a href="#" data-locale="de">{{ 'app.language.german'|trans }}</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3 page-header">
          <h1><a href="{{ app['baseUrl'] }}/">{{ 'app.name'|trans }}</a></h1>
        </div>
      </div>
      {% block content %}{% endblock %}
    </div>
    <footer>
      <div class="container">
        {{ 'app.poweredby'|trans }} <a href="https://github.com/MichaelThessel/pwx">pwx</a>.
      </div>
    </footer>
    {% block closing_scripts %}{% endblock %}
  </body>
</html>
